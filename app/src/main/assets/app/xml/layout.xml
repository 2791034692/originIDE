<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:orientation="vertical"
    android:background="#F0F0F0"
    app:auxiliaryTone="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        app:mainTone="true"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/settings_back_viewGroup"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tintTone="true"
                android:id="@+id/settings_back"
                android:src="@drawable/ic_drawable_back2_24dp" />
            <oms.view.text.UIText
                android:layout_width="wrap_content"
                android:text="首页"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="#F0F0F0" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="设置" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginBottom="5dp"
        android:background="#666c6c6c" />
    <ScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:paddingLeft="10dp"
        android:fadingEdgeLength="0dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_drawable_settings_layout_linearlayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于"
                    android:layout_marginBottom="5dp"
                    android:textColor="#6c6c6c" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="原子灵动详情"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="@color/black" />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="15dp"
                        app:tintTone="true"
                        android:id="@+id/settings_imageView_app_about_go"
                        android:src="@drawable/ic_drawable_go_24dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="原子开放服务平台"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="@color/black" />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="15dp"
                        app:tintTone="true"
                        android:id="@+id/settings_imageView_open_go"
                        android:src="@drawable/ic_drawable_go_24dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_drawable_settings_layout_linearlayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应用主题"
                    android:layout_marginBottom="5dp"
                    android:textColor="#6c6c6c" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="启用主题"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="@color/black" />
                    <com.suke.widget.SwitchButton
                        android:layout_width="wrap_content"
                        app:sb_checked_color="#F2E0CD"
                        android:id="@+id/settings_switchButton_app_theme_open_api_switch"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="应用主题设置"
                        android:textSize="16sp"
                        android:id="@+id/settings_textView_app_theme_open_api"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="@color/black" />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:visibility="gone"
                        app:tintTone="true"
                        android:layout_marginRight="15dp"
                        android:id="@+id/settings_imageView_app_theme_go"
                        android:src="@drawable/ic_drawable_go_24dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_drawable_settings_layout_linearlayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑器设置"
                    android:layout_marginBottom="5dp"
                    android:textColor="#6c6c6c" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="高性能代码框"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="@color/black" />
                    <com.suke.widget.SwitchButton
                        android:layout_width="wrap_content"
                        app:sb_checked_color="#F2E0CD"
                        android:id="@+id/settings_switchButton_super_editor_switch"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="编辑器开放接口"
                        android:textSize="16sp"
                        android:id="@+id/settings_textView_super_editor_open_api_switch"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="@color/black" />
                    <com.suke.widget.SwitchButton
                        android:layout_width="wrap_content"
                        app:sb_checked_color="#F2E0CD"
                        android:visibility="gone"
                        android:id="@+id/settings_switchButton_super_editor_open_api_switch"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="编辑器模式选择"
                        android:textSize="16sp"
                        android:id="@+id/settings_textView_super_editor_mod"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="@color/black" />
                    <Spinner
                        android:layout_width="wrap_content"
                        android:entries="@array/editor_mod"
                        android:visibility="gone"
                        android:id="@+id/settings_spinner_super_editor_mod"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>